@model Phone

@{
    ViewBag.Title = "DetailsOfPhone";
    Layout = "_Layout";
}

<h2>@Model.Name Details</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="@Model.Avatar" alt="@Model.Name Avatar">
        </div>
        <div class="col-md-8">
            <ul class="list-group">
                <li class="list-group-item"><strong>Name:</strong> @Model.Name</li>
                <li class="list-group-item"><strong>Price:</strong> @Model.Price</li>
                @if (Model.Description != null)
                {
                    <li class="list-group-item"><strong>Date of Editing:</strong> @Model.Description</li>
                }
                else
                {
                    <li class="list-group-item"><strong>Описаниe к сожалению пока не добавили</strong></li>
                }
                <li class="list-group-item"><strong>Price in other currencies:</strong>
                    <ul>
                        @foreach (var currency in ViewBag.Currencies)
                        {
                            <li>@currency.CurrencyName: @(Model.Price * currency.CurrencyRate) @currency.CurrencyCode</li>
                        }
                    </ul>
                </li>
            </ul>
        </div>
    </div>
</div>
